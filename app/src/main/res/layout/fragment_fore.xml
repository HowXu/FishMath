<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_gradient"
    android:theme="@style/Theme.FishMath"
    tools:context=".bottom.ForeFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="#6003A9F4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/meslo_regular"
                android:text="@string/appbar_title"
                android:textColor="@color/black"
                android:textSize="20dp" />


            <ImageButton
                android:id="@+id/search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/search"

                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        </RelativeLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:id="@+id/scoll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/fishmath" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/fzyh"
                android:letterSpacing="0.05"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/app_description"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shaped_layout">

                <ImageView
                    android:id="@+id/img_page7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/page"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/page7_title"
                    android:layout_toRightOf="@+id/img_page7"
                    android:layout_marginLeft="8dp"
                    android:textSize="18dp"
                    android:layout_marginTop="14dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/meslo_regular"/>

                <TextView
                    android:id="@+id/page7_n"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="@string/page7_n"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_below="@+id/img_page7"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:textSize="30dp"/>

                <EditText
                    android:id="@+id/page7_edit1"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/img_page7"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/page7_n"
                    android:background="@drawable/color_edittext"
                    android:inputType="number"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                <com.github.nikartm.button.FitButton
                    android:id="@+id/page7_submit_button"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="9dp"
                    android:layout_marginBottom="6dp"
                    android:gravity="center"
                    app:fb_backgroundColor="#A8D8CD"
                    app:fb_borderColor="#DDEFE3"
                    app:fb_borderWidth="4dp"
                    app:fb_cornerRadius="8dp"
                    app:fb_fontFamilyRes="@font/fzyh"
                    app:fb_rippleColor="#42FFF9C4"
                    app:fb_shape="rectangle"
                    app:fb_text="@string/submit"
                    app:fb_textColor="@color/black"
                    app:fb_textStyle="normal"
                    tools:ignore="TouchTargetSizeCheck" />
            </RelativeLayout>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>





